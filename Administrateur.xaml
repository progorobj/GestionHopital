                    <Button Content="Déconnexion" HorizontalAlignment="Left" Height="27" Margin="257,274,0,0" VerticalAlignment="Top" Width="100" Background="#FFB90092" Foreground="White" Click="Button_Click_3"/>
                    <Label Content="Régistremet de Médecins" HorizontalAlignment="Left" Margin="67,76,0,0" VerticalAlignment="Top" Width="218" Height="39" FontSize="18" Foreground="#FF9D0303"/>
                    <Label Content="Northern Lights Hospital (NLH) " HorizontalAlignment="Left" Margin="55,1,0,0" VerticalAlignment="Top" Width="506" Foreground="#FF003786" FontSize="36"/>
                </Grid>
            </TabItem>
            <TabItem Header="Infirmière">
                <Grid Margin="-1,-2,1.4,2.2">
                    <Grid.Background>
                        <ImageBrush ImageSource="clinique.jpg"/>
                    </Grid.Background>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="16*"/>
                        <ColumnDefinition Width="99*"/>
