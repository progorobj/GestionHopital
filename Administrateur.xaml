                    </Grid.ColumnDefinitions>
                    <Label Content="Northern Lights Hospital (NLH) " HorizontalAlignment="Left" Margin="32,-1,0,0" VerticalAlignment="Top" Width="532" FontSize="36" Height="61" Foreground="#FF003786" Grid.ColumnSpan="2"/>
                    <Rectangle Fill="White" HorizontalAlignment="Left" Height="191" Margin="275.2,69,0,0" Stroke="#FFCECECE" VerticalAlignment="Top" Width="230" Opacity="0.5" Grid.Column="1"/>
                    <Label Content="Nom :" HorizontalAlignment="Left" Margin="302.2,130,0,0" VerticalAlignment="Top" Grid.Column="1"/>
                    <Label Content="Prénom :" HorizontalAlignment="Left" Margin="288.2,169,0,0" VerticalAlignment="Top" Grid.Column="1"/>
                    <Rectangle Fill="White" HorizontalAlignment="Left" Height="191" Margin="13.2,69,0,0" Stroke="#FFCECECE" VerticalAlignment="Top" Width="230" Opacity="0.5" Grid.Column="1"/>
                    <TextBox x:Name="txtNomPrepose" HorizontalAlignment="Left" Height="23" Margin="84.2,130,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="143" Grid.Column="1"/>
                    <TextBox x:Name="txtPrenomPrepose" HorizontalAlignment="Left" Height="23" Margin="84.2,169,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="143" Grid.Column="1"/>
                    <Button x:Name="btnAjouterPrepose" Content="Ajouter" HorizontalAlignment="Left" Height="27" Margin="71.2,214,0,0" VerticalAlignment="Top" Width="104" Background="#FF458AFF" Foreground="White" Click="btnAjouterPrepose_Click" Grid.Column="1"/>
                    <ComboBox x:Name="cbListePreposes" Grid.Column="1" HorizontalAlignment="Left" Margin="288,93,0,0" VerticalAlignment="Top" Width="205" Height="27" 
                              IsSynchronizedWithCurrentItem="True" ItemsSource="{Binding}" DisplayMemberPath="idPrepose" SelectionChanged="cbListePreposes_SelectionChanged"/>
                    <TextBox x:Name="txtNomPrepose2" HorizontalAlignment="Left" Height="24" Margin="349.2,130,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="144" Grid.Column="1"/>
                    <TextBox x:Name="txtPrenomPrepose2" HorizontalAlignment="Left" Height="24" Margin="351.2,170,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="142" Grid.Column="1"/>
                    <Label Content="Nom:" HorizontalAlignment="Left" Height="31" Margin="40.2,130,0,0" VerticalAlignment="Top" Width="39" Grid.Column="1"/>
                    <Label Content="Prénom:" HorizontalAlignment="Left" Height="31" Margin="25.2,167,0,0" VerticalAlignment="Top" Width="57" Grid.Column="1"/>
                    <Label Content="Régistremet des préposes" HorizontalAlignment="Left" Margin="21.2,76,0,0" VerticalAlignment="Top" Width="218" Height="39" FontSize="18" Foreground="#FF9D0303" Grid.Column="1"/>
                    <Button x:Name="btnModiffierPrepose" Content="Modifier" HorizontalAlignment="Left" Height="27" Margin="283.2,214,0,0" VerticalAlignment="Top" Width="104" 
                            Background="#FF458AFF" Foreground="White" Click="btnModiffierPrepose_Click" Grid.Column="1"/>
                    <Button x:Name="btnSupprimerPrepose" Content="Supprimer" HorizontalAlignment="Left" Height="27" Margin="393.2,214,0,0" VerticalAlignment="Top" Width="104" 
                            Background="#FF458AFF" Foreground="White" Click="btnSupprimerPrepose_Click" Grid.Column="1"/>
                    <Button Content="Déconnexion" HorizontalAlignment="Left" Height="27" Margin="211.2,274,0,0" VerticalAlignment="Top" Width="100" Background="#FFB90092" Foreground="White" Grid.Column="1" Click="Button_Click_2"/>
                </Grid>
            </TabItem>
            <TabItem Header="Affectation">
                <TabItem.Background>
                    <ImageBrush/>
                </TabItem.Background>
                <Grid Margin="0,0,0.4,-2.8">
                    <Grid.Background>
                        <ImageBrush ImageSource="clinique.jpg"/>
                    </Grid.Background>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="22*"/>
                        <ColumnDefinition Width="65*"/>
                        <ColumnDefinition Width="523*"/>
                    </Grid.ColumnDefinitions>
                    <Label Content="Northern Lights Hospital (NLH) " HorizontalAlignment="Left" Margin="38,-2,0,0" VerticalAlignment="Top" Width="531" FontSize="36" Height="71" Foreground="#FF003786" Grid.Column="1" Grid.ColumnSpan="2"/>

                    <Rectangle Fill="White" HorizontalAlignment="Left" Height="121" Margin="20,61,0,0" Stroke="#FFCECECE" VerticalAlignment="Top" Width="567" Opacity="0.5" Grid.ColumnSpan="3"/>
                    <ComboBox x:Name="cbxListInfirmier" HorizontalAlignment="Left" Height="32" Margin="15,103,0,0" VerticalAlignment="Top" Width="164" IsSynchronizedWithCurrentItem="true" ItemsSource="{Binding}" DisplayMemberPath="idInfirmier" Grid.Column="1" Grid.ColumnSpan="2"/>
                    <ComboBox x:Name="cbxListStations" HorizontalAlignment="Left" Height="32" Margin="137.483,103,0,0" VerticalAlignment="Top" Width="158" IsSynchronizedWithCurrentItem="true" ItemsSource="{Binding}" DisplayMemberPath="NumeroStation" Grid.Column="2"/>
                    <Label Content="Liste Infirmiéres" HorizontalAlignment="Left" Margin="11,74,0,0" VerticalAlignment="Top" Grid.Column="1" Grid.ColumnSpan="2"/>
                    <Label Content="Liste d'stations" HorizontalAlignment="Left" Margin="134.483,74,0,0" VerticalAlignment="Top" Grid.Column="2"/>
                    <DatePicker x:Name="datePAffectation" HorizontalAlignment="Left" Height="32" Margin="317.483,103,0,0" VerticalAlignment="Top" Width="167" Grid.Column="2"/>
                    <Label Content="Date d'affectation" HorizontalAlignment="Left" Margin="312.483,74,0,0" VerticalAlignment="Top" Grid.Column="2"/>
                    <Button x:Name="btnAjouterAffectation" Content="Ajouter" HorizontalAlignment="Left" Height="38" Margin="242.8,226,0,0" VerticalAlignment="Top" Width="130" Background="#FF458AFF" Foreground="White" Grid.Column="2" Click="btnAjouterAffectation_Click"/>

                    <Button Content="Annuler" HorizontalAlignment="Left" Margin="53.8,226,0,0" VerticalAlignment="Top" Width="124" Click="Button_Click" Height="38" FontSize="14" Background="#FF458AFF" Foreground="White" Grid.Column="2"/>

                </Grid>
            </TabItem>
        </TabControl>
    </Grid>
</Window>
