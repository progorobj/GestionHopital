                    <Label Content="Prénom:" HorizontalAlignment="Left" Height="31" Margin="39,167,0,0" VerticalAlignment="Top" Width="57" Grid.Column="1"/>
                    <Label Content="Régistremet d'Infirmières" HorizontalAlignment="Left" Margin="35,76,0,0" VerticalAlignment="Top" Width="218" Height="39" FontSize="18" Foreground="#FF9D0303" Grid.Column="1" Grid.ColumnSpan="2"/>
                    <ComboBox x:Name="cbListeInfirmieres" HorizontalAlignment="Left" Height="27" Margin="107.055,88,0,0" VerticalAlignment="Top" Width="202" Grid.Column="2" IsSynchronizedWithCurrentItem="True" ItemsSource="{Binding}" DisplayMemberPath="idInfirmier" SelectionChanged="cbListeInfirmieres_SelectionChanged"/>
                    <TextBox x:Name="txtNomInfirmiere2" HorizontalAlignment="Left" Height="24" Margin="165.055,130,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="144" Grid.Column="2"/>
                    <TextBox x:Name="txtPrenomInfirmiere2" HorizontalAlignment="Left" Height="24" Margin="167.055,170,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="142" Grid.Column="2"/>
                    <Button x:Name="btnModiffierInfirmiere" Content="Modifier" HorizontalAlignment="Left" Height="27" Margin="99.055,214,0,0" VerticalAlignment="Top" Width="104" Background="#FF458AFF" Foreground="White" Grid.Column="2" Click="btnModiffierInfirmiere_Click"/>
                    <Button x:Name="btnSupprimerInfirmiere" Content="Supprimer" HorizontalAlignment="Left" Height="27" Margin="209.055,214,0,0" VerticalAlignment="Top" Width="104" Background="#FF458AFF" Foreground="White" Grid.Column="2" Click="btnSupprimerInfirmiere_Click"/>
                    <Button Content="Déconnexion" HorizontalAlignment="Left" Height="27" Margin="27.055,274,0,0" VerticalAlignment="Top" Width="100" Background="#FFB90092" Foreground="White" Grid.Column="2" Click="Button_Click_1"/>
                </Grid>
            </TabItem>
            <TabItem Header="Prepose" Height="25" VerticalAlignment="Top">
                <Grid Margin="-1,-2,1.4,-10.6">
                    <Grid.Background>
                        <ImageBrush ImageSource="clinique.jpg"/>
                    </Grid.Background>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="46*"/>
