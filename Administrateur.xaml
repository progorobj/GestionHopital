                    <Label Content="Nom :" HorizontalAlignment="Left" Margin="118.055,130,0,0" VerticalAlignment="Top" Grid.Column="2"/>
                    <Label Content="Prénom :" HorizontalAlignment="Left" Margin="104.055,169,0,0" VerticalAlignment="Top" Grid.Column="2"/>

                    <Rectangle Fill="White" HorizontalAlignment="Left" Height="191" Margin="27,69,0,0" Stroke="#FFCECECE" VerticalAlignment="Top" Width="230" Opacity="0.5" Grid.Column="1" Grid.ColumnSpan="2"/>

                    <TextBox x:Name="txtNomInfirmiere" HorizontalAlignment="Left" Height="23" Margin="98,130,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="143" Grid.Column="1" Grid.ColumnSpan="2"/>
                    <TextBox x:Name="txtPrenomInfirmiere" HorizontalAlignment="Left" Height="23" Margin="98,169,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="143" Grid.Column="1" Grid.ColumnSpan="2"/>
