<Window x:Class="GestionHopital.Prepose"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GestionHopital"
        mc:Ignorable="d"
        Title="Prepose" Height="600" Width="800" WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="prepose2.jpg" Opacity="0.5"/>
        </Grid.Background>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid HorizontalAlignment="Left" Height="95" Margin="56,76,0,0" VerticalAlignment="Top" Width="285" Background="#FFC6F6DB" Opacity="0.5"/>
        <TextBox x:Name="txtRechercherPatient" HorizontalAlignment="Left" Height="27" Margin="78,134,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="128" TextChanged="txtRechercherPatient_TextChanged"/>
        <Button x:Name="btnRechercher" Content="Rechercher" HorizontalAlignment="Left" Margin="216,134,0,0" VerticalAlignment="Top" Width="109" RenderTransformOrigin="0.106,1.135" Click="btnRechercher_Click" Height="27" Background="#FF2DAAE2" Foreground="White" FontSize="14"/>
        <Button x:Name="btnCreerPatient" Content="Créer Patient" HorizontalAlignment="Left" VerticalAlignment="Top" Width="212" Margin="497,438,0,0" Height="32" Click="btnAjouterPatient_Click" Background="#FF7FD8DF" FontSize="14"/>
        <Button x:Name="btnCreerAdmission" Content="Créer Admission Hôpital" HorizontalAlignment="Left" VerticalAlignment="Top" Width="212" Margin="497,487,0,0" Height="33" Click="btnCreerAdmission_Click" Background="#FFA303BF" Foreground="White" FontSize="14"/>
        <Label Content="Numéro NSS:" HorizontalAlignment="Left" Margin="73,108,0,0" VerticalAlignment="Top" Width="100" Height="26" FontSize="14"/>
        <Label Content="Date de Naissance:" HorizontalAlignment="Left" Margin="374,160,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.543,1.988" Height="26" Width="110"/>
        <Label Content="Nom:" HorizontalAlignment="Left" Margin="446,81,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.543,1.988" Height="26" Width="38"/>
        <Label Content="Prénom:" HorizontalAlignment="Left" Margin="431,121,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.543,1.988" Height="26" Width="54"/>
        <Label Content="Adresse:" HorizontalAlignment="Left" Margin="430,198,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.543,1.988" Height="26" Width="54"/>
        <Label Content="Ville:" HorizontalAlignment="Left" Margin="434,235,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.543,1.988" Height="26" Width="35"/>
        <TextBox x:Name="txtNomR" HorizontalAlignment="Left" Height="27" Margin="494,81,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="237" TextChanged="txtRechercherPatient_TextChanged" IsEnabled="False"/>
        <TextBox x:Name="txtPrenomR" HorizontalAlignment="Left" Height="27" Margin="494,120,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="237" TextChanged="txtRechercherPatient_TextChanged" IsEnabled="False"/>
        <TextBox x:Name="txtAdresseR" HorizontalAlignment="Left" Height="27" Margin="494,199,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="237" TextChanged="txtRechercherPatient_TextChanged" IsEnabled="False"/>
        <TextBox x:Name="txtVilleR" HorizontalAlignment="Left" Height="27" Margin="494,235,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="237" TextChanged="txtRechercherPatient_TextChanged" IsEnabled="False"/>
        <Label Content="Province:" HorizontalAlignment="Left" Margin="427,273,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.543,1.988" Height="26" Width="58"/>
        <Label Content="Code Postal:" HorizontalAlignment="Left" Margin="410,309,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.543,1.988" Height="26" Width="75"/>
        <TextBox x:Name="txtProvinceR" HorizontalAlignment="Left" Height="27" Margin="497,271,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="234" TextChanged="txtRechercherPatient_TextChanged" IsEnabled="False"/>
        <TextBox x:Name="txtCodePostalR" HorizontalAlignment="Left" Height="27" Margin="498,310,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="114" TextChanged="txtRechercherPatient_TextChanged" IsEnabled="False" RenderTransformOrigin="0.5,0.5">
            <TextBox.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <RotateTransform Angle="-0.607"/>
                    <TranslateTransform/>
                </TransformGroup>
            </TextBox.RenderTransform>
        </TextBox>
        <Label Content="Téléphone:" HorizontalAlignment="Left" Margin="418,348,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.543,1.988" Height="26" Width="67"/>
        <Label Content="ID Assurance:" HorizontalAlignment="Left" Margin="403,388,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.543,1.988" Height="26" Width="82"/>
        <TextBox x:Name="txtTelephoneR" HorizontalAlignment="Left" Height="27" Margin="497,348,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="117" TextChanged="txtRechercherPatient_TextChanged" IsEnabled="False"/>
        <TextBox x:Name="txtIDAssR" HorizontalAlignment="Left" Height="27" Margin="497,388,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="117" TextChanged="txtRechercherPatient_TextChanged" IsEnabled="False"/>
        <DatePicker x:Name="datePatR" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="494,158,0,0" Height="28" Width="237"/>
        <Label Content="REGISTRE DES PATIENTS NORTHERN LIGHTS HOSPITAL" HorizontalAlignment="Left" Margin="49,20,0,0" VerticalAlignment="Top" Width="694" Foreground="#FF028381" FontSize="28" Height="42"/>
        <Label Content="RECHERCHE DE PATIENTS" HorizontalAlignment="Left" Margin="71,76,0,0" VerticalAlignment="Top" Width="259" Foreground="#FF028381" FontSize="22" Height="42"/>
        <Image x:Name="imageVaccination" HorizontalAlignment="Left" Height="171" Margin="56,349,0,0" VerticalAlignment="Top" Width="285" Source="vaccination.jpg" Stretch="Fill">
            <Image.OpacityMask>
                <ImageBrush ImageSource="vaccination.jpg"/>
            </Image.OpacityMask>
        </Image>
        <Button x:Name="btnAdmissionVaccination" Content="Admission Vaccination" HorizontalAlignment="Left" Height="30" Margin="56,314,0,0" VerticalAlignment="Top" Width="285" FontSize="16" Background="#FF2DAAE2" Foreground="White" BorderBrush="#FF2DAAE2" Click="btnAdmissionVaccination_Click"/>

    </Grid>
</Window>
