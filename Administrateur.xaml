                    <Label Content="Nom :" HorizontalAlignment="Left" Margin="348,130,0,0" VerticalAlignment="Top"/>
                    <Label Content="Prénom :" HorizontalAlignment="Left" Margin="334,169,0,0" VerticalAlignment="Top"/>
                    <TextBox x:Name="txtNomMed" HorizontalAlignment="Left" Height="24" Margin="395,130,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="144"/>
                    <TextBox x:Name="txtPrenomMed" HorizontalAlignment="Left" Height="24" Margin="397,170,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="142"/>
                    <Button x:Name="btnModifier1" Content="Modifier" HorizontalAlignment="Left" Height="27" Margin="334,214,0,0" VerticalAlignment="Top" Width="98" Background="#FF458AFF" Foreground="White" Click="btnModifier1_Click"/>
                    <Button x:Name="btnSupprimer" Content="Supprimer" HorizontalAlignment="Left" Height="27" Margin="441,214,0,0" VerticalAlignment="Top" Width="98" Background="#FF458AFF" Foreground="White" Click="btnSupprimer_Click" />
